<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <!--hello-->

    <!-- Header Section at the Top -->
    <TextView
        android:id="@+id/headerText"
        android:layout_width="match_parent"
        android:layout_height="62dp"
        android:background="@color/garnet"
        android:fontFamily="@font/irish_grover"
        android:gravity="center"
        android:padding="10dp"
        android:text="@string/header_message"
        android:textColor="@color/white"
        android:textSize="28sp"
        android:layout_alignParentTop="true" />

    <!-- Main Content Layout -->
    <LinearLayout
        android:id="@+id/mainContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_below="@id/headerText">

        <!-- Welcome Message with Background -->
        <LinearLayout
            android:id="@+id/welcomeContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/garnet"
            android:padding="20dp"
            android:layout_marginTop="40dp">

            <TextView
                android:id="@+id/welcomeText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/welcome_message"
                android:textSize="28sp"
                android:textColor="@color/white"
                android:gravity="center"
                android:fontFamily="@font/irish_grover"/>
        </LinearLayout>


        <!-- OK Button -->
        <Button
            android:id="@+id/okButton"
            android:layout_width="200dp"
            android:layout_height="62dp"
            android:layout_marginTop="40dp"
            android:backgroundTint="@color/garnet"
            android:text="@string/ok_button"
            android:textSize="20sp"
            android:textColor="@color/white"
            android:gravity="center"
            android:fontFamily="@font/irish_grover"/>

        <!-- Logo Image with Separation -->
        <ImageView
            android:id="@+id/logoImage"
            android:layout_width="156dp"
            android:layout_height="156dp"
            android:src="@drawable/uottawa_garnet"
            android:layout_gravity="center"
            android:layout_marginTop="90dp"/>

    </LinearLayout>

</RelativeLayout>
